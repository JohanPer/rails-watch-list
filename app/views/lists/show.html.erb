<h2><%= @list.name %></h2>

<ul>
<% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %> - Comment: <%= bookmark.comment %> - Rating: <%= bookmark.movie.rating %>/10
  <img src="<%= bookmark.movie.poster_url %>" alt="">
  <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </li>
<% end %>
</ul>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>

<%= link_to "Back to all your lists", lists_path %>
